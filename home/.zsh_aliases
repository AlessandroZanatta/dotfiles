# Better clear screen
alias cl=clear

# Never misstype again!
alias l=ls
alias s=ls
alias sl=ls

# Creating pwn scripts with a command!
alias pwninit='pwninit --template-path=/usr/local/bin/pwninit_template.py'

# Volatility framework
alias volatility=vol

# Changing JAVA_HOME broke Clion (java version too old), it's better to use the alias
# export JAVA_HOME=/opt/android-studio/jre # BAD!
# alias android='JAVA_HOME=/opt/android-studio/jre android-studio'

# Colored grep
alias grep='grep --color'

# Start with AMDGPU programs that are video intensive (currently unsure if this is a good thing)
